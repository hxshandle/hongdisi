      select#fs-selector
        option(value="dapian") 产品大片
        option(value="springcollocation") 春季搭配 Collocation
        option(value="summercollocation") 夏季搭配 Collocation
        option(value="auntoumcollocation") 秋季搭配 Collocation
        option(value="wintercollocation") 冬季搭配 Collocation
  .container-fill
    #dapian.lv1.active
      .dp-gallery
        .mask-left
        .mask-right
        .pre-img
        .next-img
        .dp-show#dp-show
          img(src="img/dp-1.jpg")
          img(src="img/dp-2.jpg")
          img(src="img/dp-3.jpg")
    ul#summercollocation.lv1.lv1-collocation
      li.mr.lv-xl("data-ref"="fs-2")
        img(src="img/fs-1.jpg")
        a.mask
        .txt-block
          .color-bg
            span.yahei 春季
            span.didot-ital Spring
      li.mr.lv-xl("data-ref"="fs-2")
        img(src="img/fs-2.jpg")
        a.mask
        .txt-block
          .color-bg
            span.yahei 夏季
            span.didot-ital Summer
      li.lv-xl("data-ref"="fs-2")
        img(src="img/fs-3.jpg")
        a.mask
        .txt-block
          .color-bg
            span.yahei 秋季
            span.didot-ital autumn
    ul#auntoumcollocation.lv1.lv1-collocation
      li.mr.lv-xl("data-ref"="fs-1")
